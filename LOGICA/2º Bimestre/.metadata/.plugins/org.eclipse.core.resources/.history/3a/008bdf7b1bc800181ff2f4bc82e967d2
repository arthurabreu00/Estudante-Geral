package Quest01;

import java.util.Scanner;

public class TestarPorta {

	public static void main(String[] args) {

		/*
		 * CRIE UMA PORTA, ABRA E FECHE A MESMA, PINTE-A DE DIVERSAS CORES,
		 * ALTERE SUAS DIMENSÕES E USE O MÉTODO: ESTAABERTA PARA VERIFICAR SE
		 * ELA ESTÁ ABERTA OU NÃO.
		 */
		
		Scanner entrada = new Scanner(System.in);
		System.out.println("Aberta ou fechada ?");
		boolean port = entrada.nextBoolean();
		System.out.println("Cor ?");
		entrada = new Scanner(System.in);
		String cor2 = entrada.nextLine();
		System.out.println("Cor ?");
		float largur = entrada.nextFloat();
		float altur = entrada.nextFloat();
		
		Porta porta = new Porta(port,cor2,largur,altur);
		
		porta.abre();
		// porta.fecha();
		String cor = "vermelho";
		porta.pinta(cor);
		porta.alteraDimensao(4,3);
		porta.estaAberta();
		// porta.imprimir();
		
		System.out.println(porta.estaAberta());

	}

}
